* { 
  margin: 0; 
  padding: 0; 
  box-sizing: border-box; 
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: #0a0e1a;
  color: #e2e8f0;
  min-height: 100vh;
}

/* ================================
   Background Gradient
================================ */
.bg-gradient {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 20%, rgba(99, 102, 241, 0.15), transparent 50%),
              radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.15), transparent 50%);
  pointer-events: none;
}

.container {
  position: relative;
  max-width: 1400px;
  margin: 0 auto;
  padding: 24px;
}

/* ================================
   Header
================================ */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  padding: 20px 0;
}

.logo {
  font-size: 24px;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.connect-btn {
  padding: 12px 28px;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border: none;
  border-radius: 12px;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
}

.connect-btn:hover { 
  transform: translateY(-2px); 
  box-shadow: 0 6px 30px rgba(102, 126, 234, 0.5); 
}

.connect-btn:disabled { 
  background: #374151; 
  cursor: not-allowed; 
  box-shadow: none;
}

/* ================================
   Portfolio Overview
================================ */
.overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
}

.stat-card {
  background: rgba(30, 41, 59, 0.6);
  border: 1px solid rgba(148, 163, 184, 0.1);
  border-radius: 16px;
  padding: 24px;
  backdrop-filter: blur(20px);
  transition: all 0.3s ease;
}

.stat-card:hover {
  border-color: rgba(99, 102, 241, 0.3);
  transform: translateY(-2px);
}

.stat-label {
  font-size: 13px;
  color: #94a3b8;
  margin-bottom: 8px;
  font-weight: 500;
}

.stat-value {
  font-size: 28px;
  font-weight: 700;
  color: #f1f5f9;
}

.stat-change {
  font-size: 13px;
  margin-top: 8px;
  font-weight: 600;
}

.stat-change.positive { 
  color: #22c55e; 
}

.stat-change.negative { 
  color: #ef4444; 
}

/* ================================
   Chain Tabs
================================ */
.chain-tabs {
  display: flex;
  gap: 8px;
  margin-bottom: 24px;
  overflow-x: auto;
  padding-bottom: 8px;
}

.chain-tabs::-webkit-scrollbar {
  height: 4px;
}

.chain-tabs::-webkit-scrollbar-track {
  background: rgba(15, 23, 42, 0.5);
  border-radius: 10px;
}

.chain-tabs::-webkit-scrollbar-thumb {
  background: rgba(99, 102, 241, 0.5);
  border-radius: 10px;
}

.chain-tab {
  padding: 10px 20px;
  background: rgba(30, 41, 59, 0.4);
  border: 1px solid rgba(148, 163, 184, 0.1);
  border-radius: 10px;
  color: #94a3b8;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  white-space: nowrap;
  transition: all 0.2s;
}

.chain-tab:hover { 
  border-color: rgba(99, 102, 241, 0.4); 
}

.chain-tab.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
  border-color: #667eea;
  color: #a5b4fc;
}

/* ================================
   Section
================================ */
.section {
  background: rgba(30, 41, 59, 0.4);
  border: 1px solid rgba(148, 163, 184, 0.1);
  border-radius: 16px;
  padding: 28px;
  margin-bottom: 24px;
  backdrop-filter: blur(20px);
  transition: all 0.3s ease;
}

.section:hover {
  border-color: rgba(99, 102, 241, 0.2);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.section-title {
  font-size: 18px;
  font-weight: 700;
  color: #f1f5f9;
}

.view-toggle {
  display: flex;
  gap: 4px;
  background: rgba(15, 23, 42, 0.5);
  padding: 4px;
  border-radius: 8px;
}

.view-btn {
  padding: 6px 12px;
  background: transparent;
  border: none;
  color: #94a3b8;
  font-size: 13px;
  cursor: pointer;
  border-radius: 6px;
  transition: all 0.2s;
  font-weight: 500;
}

.view-btn:hover {
  color: #e2e8f0;
}

.view-btn.active {
  background: rgba(99, 102, 241, 0.2);
  color: #a5b4fc;
}

/* ================================
   Asset List
================================ */
.asset-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.asset-item {
  display: grid;
  grid-template-columns: auto 1fr auto auto;
  gap: 16px;
  align-items: center;
  padding: 16px;
  background: rgba(15, 23, 42, 0.3);
  border-radius: 12px;
  border: 1px solid rgba(148, 163, 184, 0.05);
  transition: all 0.2s;
}

.asset-item:hover {
  background: rgba(30, 41, 59, 0.4);
  border-color: rgba(99, 102, 241, 0.2);
  transform: translateX(4px);
}

.asset-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  color: white;
}

.asset-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.asset-name {
  font-weight: 600;
  color: #f1f5f9;
  font-size: 15px;
}

.asset-protocol {
  font-size: 13px;
  color: #64748b;
}

.asset-amount {
  text-align: right;
  font-weight: 600;
  color: #f1f5f9;
  font-size: 15px;
}

.asset-value {
  text-align: right;
  color: #94a3b8;
  font-size: 14px;
}

/* ================================
   Protocols Grid
================================ */
.protocols-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 16px;
}

.protocol-card {
  padding: 20px;
  background: rgba(15, 23, 42, 0.3);
  border: 1px solid rgba(148, 163, 184, 0.1);
  border-radius: 12px;
  transition: all 0.2s;
}

.protocol-card:hover {
  border-color: rgba(99, 102, 241, 0.3);
  transform: translateY(-2px);
  background: rgba(30, 41, 59, 0.4);
}

.protocol-name {
  font-weight: 600;
  color: #f1f5f9;
  margin-bottom: 8px;
  font-size: 15px;
}

.protocol-value {
  font-size: 20px;
  font-weight: 700;
  color: #667eea;
}

/* ================================
   Loading & Empty States
================================ */
.loading {
  text-align: center;
  padding: 60px 20px;
  color: #64748b;
}

.spinner {
  display: inline-block;
  width: 40px;
  height: 40px;
  border: 3px solid rgba(99, 102, 241, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #64748b;
}

.empty-state h3 {
  margin-bottom: 8px;
  color: #e2e8f0;
}

/* ================================
   Utility
================================ */
.hidden { 
  display: none !important; 
}

/* ================================
   Responsive Design
================================ */
@media (max-width: 768px) {
  .container {
    padding: 16px;
  }

  header {
    flex-direction: column;
    gap: 16px;
    align-items: stretch;
  }

  .logo {
    text-align: center;
  }

  .overview {
    grid-template-columns: 1fr;
  }

  .section {
    padding: 20px;
  }

  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
  }

  .asset-item {
    grid-template-columns: auto 1fr;
    gap: 12px;
  }
  
  .asset-amount, 
  .asset-value {
    grid-column: 2;
    text-align: left;
  }

  .protocols-grid {
    grid-template-columns: 1fr;
  }
}